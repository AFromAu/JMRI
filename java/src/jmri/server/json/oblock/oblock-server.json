{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "jmri-json-oblock-server-message",
    "type": "object",
    "description": "Data portion of message from JMRI to client for type \"oblock\"",
    "properties": {
        "name": {
            "type": "string",
            "description": "System name of the oblock"
        },
        "userName": {
            "type": [
                "string",
                "null"
            ],
            "description": "User name of the oblock"
        },
        "comment": {
            "type": [
                "string",
                "null"
            ],
            "description": "Comment for the oblock"
        },
        "properties": {
            "type": "array",
            "description": "NamedBean properties of the oblock",
            "items": {
                "type": "object",
                "properties": {
                    "key": {
                        "type": "string",
                        "description": "Key by which property is accessed"
                    },
                    "value": {
                        "type": [
                            "string",
                            "null"
                        ],
                        "description": "String value of property or null"
                    }
                }
            },
            "additionalProperties": false,
            "required": [
                "name",
                "value"
            ]
        },
        "state": {
            "type": "integer",
            "description": "The state of the oblock"
        },
        "value": {
            "type": [
                "string",
                "null"
            ],
            "description": "The oblock's value, can be idTag, Reporter, or text"
        },
        "sensor": {
            "type": [
                "string",
                "null"
            ],
            "description": "The system name of the sensor associated with the oblock"
        },
        "speed": {
            "type": [
                "string"
            ],
            "description": "The authorized speed through the oblock; authorized values depend on signal system in use"
        },
        "curvature": {
            "type": "integer",
            "enum": [
                0,
                1,
                2,
                4
            ],
            "description": "Curvature of oblock; allowed values correspond to NONE, GRADUAL, TIGHT, SEVERE in that order"
        },
        "direction": {
            "type": "integer",
            "description": "Direction of oblock; see http://jmri.org/JavaDoc/doc/jmri/Path.html for possible values"
        },
        "length": {
            "type": "number",
            "description": "Length of oblock in millimeters"
        },
        "permissive": {
            "type": "boolean",
            "description": "true if oblock allows a train to enter it while occupied; false otherwise"
        },
        "speedLimit": {
            "type": "number",
            "description": "The maximum allowed speed for the oblock"
        },
        "denied": {
            "type": "array",
            "description": "List of names of oblocks that trains cannot enter this oblock from",
            "items": {
                "type": "string",
                "description": "Name of a oblock that trains cannot enter this oblock from"
            }
        },
        "reporter": {
            "type": [
                "string",
                "null"
            ],
            "description": "The system name of the reporter associated with the oblock"
        }
    },
    "additionalProperties": false,
    "required": [
        "name",
        "userName",
        "comment",
        "sensor",
        "reporter",
        "value",
        "speed",
        "curvature",
        "direction",
        "length",
        "permissive",
        "speedLimit",
        "denied"
    ]
}
